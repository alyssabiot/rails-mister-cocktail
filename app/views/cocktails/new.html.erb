<h1 class="text-center">Add your cocktail here</h1>

<div class="container ingredients">
  <div class="row">
   <div class="col-xs-12 col-md-6 col-md-offset-3">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.error_notification %>
        <%= f.input :name %>
        <%= f.button :submit, "Submit", class: "navbar-wagon-button" %>
      <% end %>
    </div>
  </div>
</div>
